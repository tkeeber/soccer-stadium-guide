<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/footballer_silhouette_1"
	android:orientation="vertical" android:gravity="center_horizontal">
	

	<View
		android:id="@+id/seperator1" 
		android:layout_width="fill_parent" android:layout_marginLeft="5px"
		android:layout_marginRight="5px" android:layout_marginTop="5px"
		android:layout_height="2px" android:background="@color/black"/>

	<TextView 	
		android:id="@+id/text_away_team_title" 
		android:layout_width="fill_parent" android:text="The Ulimate Premiership Stadium Guide!"
		android:layout_height="wrap_content" android:textColor="@color/black"
		android:gravity="center_horizontal" android:textSize="18dp" android:textStyle="bold"
		android:paddingTop="5dp" android:paddingBottom="5dp" 
		android:layout_below="@id/seperator1"/>
		
	<View
		android:id="@+id/seperator2" 
		android:layout_width="fill_parent" android:layout_marginLeft="5px"
		android:layout_marginRight="5px"
		android:layout_height="2px" android:background="@color/black"
		android:layout_below="@id/text_away_team_title"/>


	<TextView android:layout_width="fill_parent"
		android:id="@+id/text_loading_progress" android:layout_height="wrap_content"
		android:gravity="bottom|center_horizontal" android:text="Loading..."
		android:background="@null" android:textColor="@color/black"
		android:paddingBottom="10dp" android:paddingTop="20dp"/>

</LinearLayout>
